{{ form_start(form, {'attr' : {'id' : 'form-ajax'}}) }}
<div id="reponse">
	
</div>

	<div class="form-group ">	
		<div class="row d-flex justify-content-center">
			<div class="col-6 col-form">
				{{ form_label(form.name) }} 
				{{ form_widget(form.name, { 'attr': {'class': 'form-control light-form' }} )}}
				{% if form_errors(form.name) is not empty %}
				<div class="row row-error d-flex justify-content-center error-ajax hidden">
					<div class="col-12 col-form alert alert-danger">
						{{ form_errors(form.name) }}	
					</div>
				</div>
				{%endif%}
			</div>
			
			<div class="col-6 col-form">
				{{ form_label(form.email) }} 
				{{ form_widget(form.email, { 'attr': {'class': 'form-control light-form' }} )}}
				{% if form_errors(form.email) is not empty %}
				<div class="row row-error d-flex justify-content-center error-ajax hidden">
					<div class="col-12 col-form alert alert-danger">
						{{ form_errors(form.email) }}	
					</div>
				</div>
				{%endif%}
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row justify-content-center">
			<div class="col-6 col-form">
				{{ form_label(form.tel) }} 
				{{ form_widget(form.tel, { 'attr': {'class': 'form-control light-form' }} )}}
				{% if form_errors(form.tel) is not empty %}
				<div class="row row-error d-flex justify-content-center error-ajax hidden">
					<div class="col-12 col-form alert alert-danger">
						{{ form_errors(form.tel) }}	
					</div>
				</div>
				{%endif%}
			</div>
			<div class="col-6 col-form">
				{{ form_label(form.object) }} 
				{{ form_widget(form.object, { 'attr': {'class': 'form-control light-form' }} )}}
				{% if form_errors(form.object) is not empty %}
				<div class="row row-error d-flex justify-content-center error-ajax hidden">
					<div class="col-12 col-form alert alert-danger">
						{{ form_errors(form.object) }}	
					</div>
				</div>
				{%endif%}
			</div>
			
		</div>
	</div>
	<div class="form-group">
		<div class="row justify-content-center">
			<div class="col-12 col-form">
				{{ form_label(form.content) }} 
				{{ form_widget(form.content, { 'attr': {'class': 'form-control light-form'}} )}}
				{% if form_errors(form.content) is not empty %}
				<div class="row row-error d-flex justify-content-center error-ajax hidden">
					<div class="col-12 col-form alert alert-danger">
						{{ form_errors(form.content) }}	
					</div>
				</div>
				{%endif%}
			</div>
		</div>
	</div>
	
	<div class="form-group">
		<div class="row justify-content-center">
			<div class="col-6 col-form ">
				{{ form_widget(form) }}
				<button type="submit" id="submit" class="btn btn-login">{{ button|default('Envoyer') }}</button>
			</div>
		</div>	
	</div>
{{ form_end(form) }}
