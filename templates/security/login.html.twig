{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
<section class="dark-part" id="login">
	
<div class="container ">
	{% if error %}
		<div class="alert alert-danger">
			{{ error.messageKey | trans(error.messagedata, 'security') }}
		</div>
	{% endif %}
	{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
	{% endfor %}

	{{ include('security/_form-secu.html.twig', {form: form, button: 'Se connecter'}) }}
	
	<form action= "{{ path('login') }}" method="post">
		<div class="form-group">
			<label for="username">Nom</label>
			<input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}">
		</div>
		<div class="form-group">
			<label for="password">Mot de passe</label>
			<input type="password" name="_password" id="password" class="form-control">
		</div>
		<button type="submit" class="btn btn-login">Se connecter</button>
<!-- 		<a href="{{ path('inscription') }}">Pas encore inscritÂ·e ? C'est ici !</a>
 -->	
	</form>	
</div>

</section>

{% endblock %}
