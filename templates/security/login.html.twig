{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
<section class="dark-part" id="login">
	
<div class="container ">
	{% if error %}
		<div class="alert alert-danger">
			{{ error.messageKey | trans(error.messagedata, 'security') }}
		</div>
	{% endif %}
	{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
	{% endfor %}


	<form action= "{{ path('login') }}" method="post">
		<div class="form-group">
			<div class="row">
				<div class="col-12 col-form">
					<label for="username">Nom</label>
					<input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-form">
				<div class="form-group">
					<label for="password">Mot de passe</label>
					<input type="password" name="_password" id="password" class="form-control">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-form">
				<button type="submit" class="btn btn-login">Se connecter</button>	
			</div>
		</div>
	</form>	
	<a href="mailto:contact@gaelle-david.cmoi.cc">Pas encore inscritÂ·e ? Ecrivez-moi !</a>
</div>

</section>

{% endblock %}
