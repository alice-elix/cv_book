{{ form_start(form) }}

	<div class="form-group">
		<div class="row d-flex justify-content-center">
			{% if form_errors(form) is not empty %}
			<div class="col-12 col-form alert alert-danger">
				 {{ form_errors(form) }}
			</div>
			{%endif%}
		</div>
		<div class="row">
			<div class="col-12 col-form">
			{{ form_label(form.username) }}
			{{ form_widget(form.username, { 'attr': {'class': 'form-control' }}  ) }}
			</div>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-12 col-form">
			{{ form_label(form.password) }} 
			{{ form_widget(form.password, { 'attr': {'class': 'form-control' }} )}}</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-12 col-form">
				{{ form_widget(form) }}
				<button type="submit" class="btn btn-login">{{ button|default('Se connecter') }}</button>
			</div>
		</div>	
	</div>
{{ form_end(form) }}
